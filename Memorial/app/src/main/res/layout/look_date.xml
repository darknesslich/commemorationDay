<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/date_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="纪念日"
        android:textColor="#000000"
        android:textSize="36sp"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="纪念日期"
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_below="@+id/date_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/out"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textSize="30sp"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/next_days"
        android:layout_alignLeft="@+id/days_after"
        android:layout_alignStart="@+id/days_after" />

    <Button
        android:id="@+id/del"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:text="删除"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_alignTop="@+id/out"
        android:layout_toRightOf="@+id/date_name"
        android:layout_toEndOf="@+id/date_name" />

    <TextView
        android:id="@+id/DATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/del"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignRight="@+id/del"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="17dp"
        android:textColor="#000000"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/days_after"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/DATE"
        android:layout_alignLeft="@+id/DATE"
        android:layout_alignRight="@+id/DATE"
        android:layout_alignStart="@+id/DATE"
        android:layout_below="@+id/DATE"
        android:layout_marginTop="13dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/next_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/DATE"
        android:layout_alignLeft="@+id/out"
        android:layout_alignRight="@+id/DATE"
        android:layout_alignStart="@+id/out"
        android:layout_below="@+id/days_after"
        android:layout_marginTop="11dp"
        android:textSize="24sp" />
</RelativeLayout>